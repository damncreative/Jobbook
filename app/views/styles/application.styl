// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

html, body

*
  box-sizing: border-box
  -webkit-font-smoothing: antialiased;

body
  padding-top 70px
  padding-bottom 80px

img
  image-rendering: auto;

#top-shadow
  position fixed
  top 0
  left 0
  width 100%
  height 50px
  z-index 999
  -webkit-box-shadow 0 8px 8px rgba(0, 0, 0, 0.5)
  -moz-box-shadow 0 8px 8px rgba(0, 0, 0, 0.5)
  box-shadow 0 8px 8px rgba(0, 0, 0, 0.5)
  display none

#footer
  height 50px
  background-color #222
  width 100%
  position fixed
  bottom 0
  left 0
  z-index 1000

#footer-shadow
  position fixed
  bottom 0
  left 0
  width 100%
  height 50px
  z-index 999
  -webkit-box-shadow 0px -8px 8px rgba(0, 0, 0, 0.5)
  -moz-box-shadow 0px -8px 8px rgba(0, 0, 0, 0.5)
  box-shadow 0px -8px 8px rgba(0, 0, 0, 0.5)
  display none

.container
  .text-muted
    margin 15px 0

.filterbutton
  padding 0
  & > li
    display inline-block
    margin-right 5px

#worksgrid
  .mix
    opacity 0
    display none

